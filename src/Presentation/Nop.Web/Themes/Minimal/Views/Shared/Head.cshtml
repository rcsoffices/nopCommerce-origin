@using Nop.Core
@using Nop.Core.Domain.Catalog

@inject CatalogSettings catalogSettings
@inject IWorkContext workContext

@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;

    if (supportRtl)
    {
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/1900.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/1600.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/1366.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/1280.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/1024.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/768.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/480.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/mobile.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/tables.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/styles.rtl.css");
    }
    else
    {
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/1900.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/1600.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/1366.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/1280.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/1024.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/768.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/480.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/mobile.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/tables.css");
        NopHtml.AppendCssFileParts("~/Themes/Minimal/Content/css/styles.css");
    }

    if (catalogSettings.DisplayAllPicturesOnCatalogPages)
    {
        NopHtml.AppendCssFileParts("~/lib_npm/swiper/swiper-bundle.min.css");
    }

    NopHtml.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");

    <script src="~/Plugins/SevenSpikes.Core/Scripts/footable.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.ex.min.js" asp-location="Footer"></script>

    <script src="~/Themes/Minimal/Content/scripts/Minimal.js" asp-location="Footer"></script>
}